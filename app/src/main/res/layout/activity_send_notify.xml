<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.students.sns.SendNotify">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="15dp"

        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/notify_title"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_shape"
            android:hint="Title Of Notify"
            android:layout_margin="10dp"
            android:padding="10dp"

            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/notify_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_shape"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="5"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:hint="Text of Notification"
            />
        <Spinner
            android:id="@+id/collage"
            android:background="@drawable/edit_text_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            ></Spinner>
        <Spinner
            android:id="@+id/section"
            android:background="@drawable/edit_text_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            ></Spinner>
        <Spinner
            android:id="@+id/level"
            android:background="@drawable/edit_text_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            ></Spinner>
        <Button
            android:id="@+id/send_notify"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_sahpe"
            android:text="Send"
            android:textColor="#FFEED9"
            android:textSize="20dp"

            />



    </LinearLayout>
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        android:id="@+id/inst_nav_view"
        ></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
